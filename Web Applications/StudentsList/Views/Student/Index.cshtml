@model IList<StudentsList.Models.Students.StudentViewModel>

<h2>Students</h2>

<table class="table">
    <tr>
        <th>
            Student Number
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th></th>
    </tr>

    @foreach (var student in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => student.StudentNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => student.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => student.LastName)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = student.StudentNumber })
    </td>
</tr>
            }
</table>